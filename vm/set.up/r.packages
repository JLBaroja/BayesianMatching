#!/bin/bash -l

echo "r.packages $@"

apt-get install -qq \
    r-cran-rjags \
    jags \
    libssl-dev \
    make=4.2.1-1.2 \
    gcc=4:9.3.0-1ubuntu2 \
    g++=4:9.3.0-1ubuntu2 # &> /dev/null


su - -c "R -e \"install.packages(c('R2jags'), dep=T, repos='http://cran.rstudio.com/')\"" #&> /dev/null
